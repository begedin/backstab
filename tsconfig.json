{
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": true,
    "target": "esnext",
    "module": "es6",
    "strict": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": ["webpack-env"],
    "paths": { "@/*": ["src/*"] },
    "lib": ["esnext"]
  },
  "include": ["src/**/*.ts", "src/**/*.js"],
  "exclude": ["node_modules"]
}
